{% extends "./layout.njk" %}

{% block content %}
  <article>
    {% if title %}
    <div class="c-hero">
      <div class="container container--xl">
        <div class="c-hero__content">
          <h1 class="heading-xl">{{ title }}</h1>
        </div>
      </div>
    </div>
    {% endif %}

    <div class="container container--xl">
      <div class="intro">
        <div class="o-richtext">
          {{ content | safe }}
        </div>
      </div>
    </div>

    {% for section in collections.section %}
      {% include "./partials/section.njk" %}
    {% endfor %}
    
  </article>
{% endblock %}