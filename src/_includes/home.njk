{% extends "./layout.njk" %}

{% block content %}
  <article>
    {% if title %}
    <div class="c-hero">
      <div class="container container--xl">
        <div class="c-hero__content">
          <h1 class="heading-xl">{{ title }}</h1>
        </div>
      </div>
    </div>
    {% endif %}

    <div class="container">
      <div class="o-richtext">
        {{ content | safe }}
      </div>
    </div>
  </article>
{% endblock %}